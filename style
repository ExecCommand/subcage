/* ---------------- Glitch effect ---------------- */
.glitch { position: relative; display:inline-block; }
.glitch::before,
.glitch::after {
  content: attr(data-text);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  pointer-events: none;
  opacity: 0.9;
}
.glitch::before {
  color: rgba(255,0,0,0.9);
  z-index: -1;
  transform: translate(-2px, -1px);
  mix-blend-mode: screen;
  clip-path: polygon(0 0,100% 0,100% 45%,0 45%);
  animation: glitchTop 2.3s infinite linear;
}
.glitch::after {
  color: rgba(255,120,120,0.7);
  z-index: -2;
  transform: translate(2px, 1px);
  mix-blend-mode: screen;
  clip-path: polygon(0 55%,100% 55%,100% 100%,0 100%);
  animation: glitchBottom 2.1s infinite linear;
}

@keyframes glitchTop {
  0% { transform: translate(-2px,-1px) skewX(-0.2deg); }
  25% { transform: translate(1px,-3px) skewX(0.6deg); }
  50% { transform: translate(-3px,1px) skewX(-0.4deg); }
  75% { transform: translate(2px,-2px) skewX(0.2deg); }
  100% { transform: translate(-2px,-1px) skewX(-0.2deg); }
}
@keyframes glitchBottom {
  0% { transform: translate(2px,1px) skewX(0.2deg); }
  25% { transform: translate(-2px,2px) skewX(-0.6deg); }
  50% { transform: translate(3px,-1px) skewX(0.4deg); }
  75% { transform: translate(-1px,2px) skewX(-0.2deg); }
  100% { transform: translate(2px,1px) skewX(0.2deg); }
}

